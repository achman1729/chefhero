<div class="container index-page-container">

    <div class="splash-page"> 
        <h4> Hi, explore great food! </h4>
        <div class="splash-suggestions">
            <%= link_to dishes_path(:search => "japanese") do %>
                <div class="suggest-label">
                    <%= image_tag "sushi.jpg" %>
                    Japanese
                </div>
            <% end %>
            <%= link_to dishes_path(:search => "western") do %>
                <div class="suggest-label">
                    <%= image_tag "burgerrr.jpg" %>
                    Western
                </div>
            <% end %>
            <%= link_to dishes_path(:search => "italian") do %>
                <div class="suggest-label">
                    <%= image_tag "Pasta1.jpg" %>
                    Italian
                </div>
            <% end %>
            <%= link_to dishes_path(:search => "chinese") do %>
                <div class="suggest-label">
                    <%= image_tag "fri-ri.jpg" %>
                    Chinese
                </div>
            <% end %>
        </div>
        <div class="top-chefhero-container">
            <h2> Top Dishes</h2>
            <p id="hint"> (click to visit the ChefHeroe's profile to order) </p>
            <div class="chef-list">
                <% top = true %>
                <% for dish, orders in @top_dishes %>
                    <% record = Dish.find(dish)%>
                    <%= link_to user_path(record.get_chef.id) do %>
                        <div class="chef-card">
                            <%= image_tag record.get_image %>
                            <p id="chef-name"> <% if top %> <i class="fas fa-crown"></i> <% end%> <%= record.name %></p>
                            <p> 
                                <%= image_tag "hat-icon.png"%> <%= User.find(record.get_chef.id).name %><br/>
                                <i class="fas fa-star"></i> <%= User.find(record.get_chef.id).reviews.length > 0 ? "%.2f" % User.find(record.get_chef.id).reviews.average(:rating) : 0 %>(<%= User.find(record.get_chef.id).reviews.length %>)<br/>
                                <span><%= orders.to_i %></span> total orders
                            </p>
                        </div>
                    <% end %>
                    <% top = false %>
                <% end %>
            </div>
            <%= link_to "Find more dishes!", dishes_path, id:"index-links" %>
        </div>

        <div class="index-info-graph">
            <h3> <span>ChefHeros</span> everywhere, find them and support! </h3>
            <h5> Or become the ChefHero youâ€™ve always wanted to be yourself.</h5>
            <div class="attributes-row">
                <p> 
                    <i class="fas fa-search-location"></i> <br/><br/>
                    Discover great hidden dishes
                </p>
                <p> 
                    <i class="fas fa-users"></i> <br/><br/>
                    Join a great community
                </p>
                <p> 
                    <i class="fas fa-comment-dollar"></i> <br/><br/>
                    Earn money with your cooking
                </p>
            </div>
        </div>

        <div class="top-chefhero-container">
            <h2> Top ChefHeroes</h2>
            <div class="chef-list">
                <% top = true %>
                <% for chef, orders in @top_chefs %>
                    <%= link_to user_path(chef) do %>
                        <div class="chef-card">
                            <%= image_tag User.find(chef).get_display_picture%>
                            <p id="chef-name"> <% if top %> <i class="fas fa-crown"></i> <% end%> <%= User.find(chef).name %></p>
                            <p> 
                                <i class='fas fa-heart' id="fav-count"></i> <%= User.find(chef).total_favourites %><br/>
                                <i class="fas fa-star"></i> <%= User.find(chef).reviews.length > 0 ? "%.2f" % User.find(chef).reviews.average(:rating) : 0 %>(<%= User.find(chef).reviews.length %>)<br/>
                                <span><%= orders %></span> total orders
                            </p>
                        </div>
                    <% end %>
                    <% top = false %>
                <% end %>
            </div>
            <%= link_to "Find more Chefheroes!", chefs_path, id:"index-links" %>
        </div>

    </div>


</div>
<%= render "shared/footer"%>